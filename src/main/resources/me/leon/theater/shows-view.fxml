<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane prefHeight="43.0" prefWidth="1200.0">
         <children>
            <Text layoutX="14.0" layoutY="29.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Manage Showings">
               <font>
                  <Font size="22.0" />
               </font>
            </Text>
            <Text fx:id="errorMessage" fill="RED" layoutX="305.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="483.0" prefWidth="1200.0">
         <TableView fx:id="showingsTableView" layoutX="14.0" prefHeight="483.0" prefWidth="1100.0">
            <columns>
               <TableColumn minWidth="300" text="Title">
                  <cellValueFactory>
                     <PropertyValueFactory property="title" />
                  </cellValueFactory>
               </TableColumn>
               <TableColumn minWidth="180" text="Start Time">
                  <cellValueFactory>
                     <PropertyValueFactory property="startTime" />
                  </cellValueFactory>
               </TableColumn>
               <TableColumn minWidth="180" text="End Time">
                  <cellValueFactory>
                     <PropertyValueFactory property="endTime" />
                  </cellValueFactory>
               </TableColumn>
               <TableColumn minWidth="50" prefWidth="130.0" text="Room">
                  <cellValueFactory>
                     <PropertyValueFactory property="roomOccupation" />
                  </cellValueFactory>
               </TableColumn>
            </columns>
         </TableView>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </AnchorPane>
      <HBox prefHeight="59.0" prefWidth="1200.0" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addShowing" prefHeight="42.0" prefWidth="105.0" style="-fx-background-color: #0078d7;" text="Add Showing" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#editShowing" prefHeight="42.0" prefWidth="105.0" style="-fx-background-color: #797979;" text="Edit Showing" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#deleteShowing" prefHeight="39.0" prefWidth="105.0" style="-fx-background-color: #c60108;" text="Delete Showing" textFill="WHITE" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
